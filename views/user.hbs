{{> header}}
{{> navbar}}
<div class="container m-genre">
<div class="d-flex flex-row justify-content-between mar-bot">
    <h1 class="fw-bold">User.</h1>
    <button class="btn btn-primary text-uppercase btn-sm-lg" style="height: 40px !important;"><a href="/signup" class="text-decoration-none text-light">Add data</a></button>
</div>
<hr>
    <table class="table table-striped table-hover border">
    <thead>
        <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col">Control</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        {{#each users}}    
        <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.password}}</td>
            <td>
                <div class="text-start">
                    <a href="/edit-user/{{this.id}}">
                        Edit
                    </a> | 
                    <a href="/delete-user/{{this.id}}">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</div>
{{> footer}}