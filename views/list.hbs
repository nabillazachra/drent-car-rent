{{> header}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/list">{{title}}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {{#if isLogin}}
                test
                {{else}}
                    <li class="nav-item">
                        <a class="nav-link {{link}}" href="/login">Admin</a>
                    </li>
                {{/if}}
                </ul>
                <div class="d-grid gap-2 d-sm-flex">
                {{#if isLogin}}
                <a href="/logout" class="text-decoration-none text-light"><button type="button" class="btn btn-danger shadow">Logout</button></a>             
                {{/if}}
            </div>
            </div>
        </div>
</nav>

<div class="px-4 py-5 my-5 text-center shadow p-3 mb-5 rounded">
    <h1 class="display-5 fw-bold">Cheapest Rental, period.</h1>
    <p class="lead mb-4">
        You can rent a car anytime and anywhere. Book now, pay later, and use after. This is your best choice ever, dude.
    </p>
    {{#if isLogin}}
    <h1>Welcome!</h1>
    {{else}}
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <button type="button" class="btn btn-outline-secondary shadow btn-lg px-4"><a href="/loginUser" class="text-decoration-none text-dark">Login</a></button>
        <button type="button" class="btn btn-success shadow btn-lg px-4 gap-3"><a href="/signupUser" class="text-decoration-none text-light">Sign Up</a></button>
    </div>
    {{/if}}
</div>
<h1 class="text-center">Car List.</h1>
<div class="container mb-5 d-flex flex-wrap justify-content-evenly flex-row">
    {{#each car}}
    <div class="card card-hover mt-5" style="width: 18rem;">
        <img src="{{this.photo}}" class="card-img-top" alt="{{this.name}}">
        <div class="card-body shadow">
            <h5 class="text-dark fw-bold">{{this.name}} - {{this.plat_number}}</h5>
            <h5 class="text-dark fw-bold">{{this.brand}} - {{this.type}}</h5>
            <p class="card-text">Rp. {{this.price}}</p>
            <button type="button" class="btn btn-success shadow btn-lg px-4 gap-3"><a href="/user-rent/{{this.id}}"class="text-decoration-none text-light">Rent</a></button>
        </div>
    </div>
    {{/each}}
</div>

{{> footer}}